<% layout("/layouts/boilerplate") %>

<body>
  <div class="container-fluid px-2 px-md-5">
    <div class="row mt-3">
      <div class="col-12 col-md-8 offset-md-2">
        <h2 class="text-center">Listing Details</h2>
        <br>
      </div>
      <div class="card col-12 col-md-8 offset-md-2 show-card listing-card mb-3">
        <img src="<%=listing.image.url ? listing.image.url : listing.image%>" class="card-img-top show-img img-fluid responsive-listing-img" alt="listing_image">
  <!-- Responsive styles for the whole page -->
  <style>
    body { overflow-x: hidden; background: #fafbfc; }
    .container-fluid {
      padding-top: 1.2rem;
      padding-bottom: 1.2rem;
    }
    .show-card {
      margin: 1.2rem auto 1.2rem auto;
      padding: 1rem 0.5rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      border-radius: 1rem;
      background: transparent;
      box-shadow: none;
    }
    .responsive-listing-img {
      width: 100%;
      max-width: 432px;
      height: 16rem;
      object-fit: cover;
      border-radius: 0.75rem;
      margin: 0 auto 0.7rem auto;
      display: block;
      box-shadow: none;
    }
    .listing-text-container {
      max-width: 432px;
      width: 100%;
      text-align: left;
      margin-bottom: 0.7rem;
      padding: 0.3rem 0.3rem 0.3rem 0.3rem;
      background: transparent;
      border-radius: 0.5rem;
    }
    .center-btns {
      display: flex;
      justify-content: center;
      gap: 0.7rem;
      flex-wrap: wrap;
      margin-bottom: 1.2rem;
      margin-top: 0.3rem;
    }
    .btn-responsive {
      min-width: 120px;
      max-width: 180px;
      width: 100%;
      margin-bottom: 0.3rem;
    }
    .review-section {
      margin: 1.2rem auto 1.2rem auto;
      padding: 1rem 0.5rem;
      border-radius: 1rem;
      background: transparent;
      box-shadow: none;
      max-width: 432px;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    .review-section h4 {
      text-align: left;
      width: 100%;
      margin-left: 0;
      font-size: 1.35rem;
      font-weight: 600;
    }
    .all-reviews-row {
      width: 100%;
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: flex-start;
      margin-top: 1rem;
    }
    .review-card {
      flex: 1 1 48%;
      min-width: 200px;
      max-width: 210px;
      margin-bottom: 1rem;
      background: #f7f7f7;
      border-radius: 0.5rem;
      box-shadow: none;
    }
    @media (max-width: 768px) {
      .review-section {
        max-width: 100%;
        padding: 1rem 0.2rem;
      }
      .all-reviews-row {
        flex-direction: column;
        gap: 0.5rem;
      }
      .review-card {
        max-width: 100%;
        min-width: 0;
      }
    }
    .map-container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      margin: 1.2rem auto 1.2rem auto;
      padding: 0.7rem 0;
      background: transparent;
      border-radius: 1rem;
      box-shadow: none;
    }
    #map {
      width: 432px;
      height: 300px;
      border: 0.5px solid #000;
      border-radius: 12px;
      background: #f8f8f8;
      margin: 0 auto;
      display: block;
      box-shadow: none;
    }
    hr {
      margin: 1.2rem 0;
    }
    @media (max-width: 768px) {
      .container-fluid {
        padding-top: 1rem;
        padding-bottom: 1rem;
      }
      .show-card {
        margin: 1rem auto 1rem auto;
        padding: 1rem 0.5rem;
      }
      .responsive-listing-img {
        max-width: 100%;
        height: 10rem;
        margin-bottom: 0.5rem;
      }
      .listing-text-container {
        max-width: 100%;
        padding: 0.5rem;
      }
      .center-btns {
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }
      .review-section {
        margin: 1rem 0;
        padding: 1rem 0.5rem;
      }
      .map-container {
        margin: 1rem auto 1rem auto;
        padding: 0.5rem 0;
      }
      #map {
        width: 100%;
        min-width: 220px;
        max-width: 100%;
        height: 200px;
      }
      .row {
        margin-right: 0;
        margin-left: 0;
        justify-content: center;
      }
    }
  </style>
        <div class="card-body d-flex flex-column align-items-center">
          <div class="listing-text-container" style="max-width:432px; width:100%; text-align:left;">
            <p class="card-text" style="font-size: 1.22rem;">
              <b style="font-size: 1.7rem;"><%= listing.title %></b> <br>
              <%= listing.description %> <br>
              &#8377 <%= listing.price.toLocaleString("en-IN") %> <br>
              <%= listing.location %> <br>
              <%= listing.country %> <br>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12 col-md-8 offset-md-2 center-btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn btn-responsive">Edit</a>
        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE" class="d-inline">
          <button class="btn btn-dark delete-btn btn-responsive">Delete</button>
        </form>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12 d-flex justify-content-center">
        <div class="review-section">
          <hr>
          <h4>Leave a Review</h4>
          <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            <div class="mb-3 mt-3 d-flex flex-column align-items-center" style="width:100%;">
              <label for="comment" class="form-label" style="width:100%; max-width:432px; text-align:left;">Comments</label>
              <textarea name="review[comment]" id="comment" rows="6" cols="100" class="form-control" required style="width:100%; max-width:520px;"></textarea>
              <div class="invalid-feedback" style="width:100%; max-width:432px;">Please Add some Comments for review</div>
              <button class="btn btn-outline-dark btn-responsive mt-3" style="max-width:200px; width:100%; margin:0 auto; display:block;">Submit</button>
            </div>
          </form>
          <hr>
          <% if(listing.reviews.length > 0) { %>
          <p style="font-weight:600; font-size:1.1rem; margin-bottom:0.5rem;">All Reviews</p>
          <div class="all-reviews-row">
            <% for(review of listing.reviews){ %>
            <div class="review-card">
              <div class="card-body">
                <h5 class="card-title" style="font-size:1rem; font-weight:500;"><%= review.author ? review.author.username : "Anonymous" %></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                <p class="card-text"> <%= review.comment %></p>
              </div>
              <% if (currentUser && review.author && review.author._id.equals(currentUser._id)) { %>
              <form class="mb-3" method="post" action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark ms-3 w-100">Delete</button>
              </form>
              <% } %>
            </div>
            <% } %>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12 col-md-8 offset-md-2">
        <h3>Where you'll be</h3>
        <div class="map-container">
          <div id="map"></div>
        </div>
      </div>
    </div>
  </div>

  <% 
    let coordsJS;
    if (listing.geometry && listing.geometry.coordinates && listing.geometry.coordinates.length === 2) {
      coordsJS = JSON.stringify(listing.geometry.coordinates);
    } else {
      coordsJS = 'null';
    }
    let locationJS = '';
    if (listing.location) {
      locationJS = listing.location.replace(/"/g, '\"');
    }
  %>
  <script>
    const coordinates = <%- coordsJS %>;
    const locationString = "<%= locationJS %>";

    if (coordinates !== null) {
      showMap(coordinates);
    } else if (locationString && locationString.trim() !== '') {
      fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(locationString)}`)
        .then(res => res.json())
        .then(data => {
          if (data && data[0]) {
            const coords = [parseFloat(data[0].lon), parseFloat(data[0].lat)];
            showMap(coords);
          } else {
            showMap([75.7876, 21.0418]);
          }
        })
        .catch(() => showMap([75.7876, 21.0418]));
    } else {
      showMap([75.7876, 21.0418]);
    }

    function showMap(coords) {
      const map = new maplibregl.Map({
        style: 'https://tiles.openfreemap.org/styles/liberty',
        center: coords,
        zoom: 9.5,
        container: 'map',
      });
      if (Array.isArray(coords) && coords.length === 2) {
        new maplibregl.Marker().setLngLat(coords).addTo(map);
      }
    }
  </script>
</body>
</body>
