<% layout("/layouts/boilerplate") %>

<body>
  <div class="container-fluid px-2 px-md-5">
    <div class="row mt-3">
      <div class="col-12 col-md-8 offset-md-2">
        <h2 class="text-center">Listing Details</h2>
        <br>
      </div>
      <div class="card col-12 col-md-8 offset-md-2 show-card listing-card mb-3">
        <img src="<%=listing.image.url ? listing.image.url : listing.image%>" class="card-img-top show-img img-fluid responsive-listing-img" alt="listing_image">
  <style>
    .responsive-listing-img {
      width: 100%;
      max-width: 400px;
      height: 16rem;
      object-fit: cover;
      border-radius: 0.75rem;
      margin: 0 auto;
      display: block;
    }
    @media (max-width: 576px) {
      .responsive-listing-img {
        max-width: 100%;
        height: 10rem;
      }
    }
  </style>
        <div class="card-body">
          <p class="card-text" style="font-size: 1.22rem;">
            <b style="font-size: 1.7rem;"><%= listing.title %></b> <br>
            <%= listing.description %> <br>
            &#8377 <%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.location %> <br>
            <%= listing.country %> <br>
          </p>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12 col-md-8 offset-md-2 d-flex flex-wrap gap-2">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn flex-fill">Edit</a>
        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE" class="flex-fill">
          <button class="btn btn-dark delete-btn w-100">Delete</button>
        </form>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12 col-md-8 offset-md-2">
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
          <div class="mb-3 mt-3">
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" rows="3" class="form-control" required></textarea>
            <div class="invalid-feedback">Please Add some Comments for review</div>
          </div>
          <button class="btn btn-outline-dark w-100">Submit</button>
        </form>
        <hr>
        <% if(listing.reviews.length > 0) { %>
        <div class="row">
          <p><b>All Reviews</b></p>
          <% for(review of listing.reviews){ %>
          <div class="card col-12 col-md-5 ms-md-3 mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= review.author ? review.author.username : "Anonymous" %></h5>
              <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
              <p class="card-text"> <%= review.comment %></p>
            </div>
            <% if (currentUser && review.author && review.author._id.equals(currentUser._id)) { %>
            <form class="mb-3" method="post" action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE">
              <button class="btn btn-sm btn-dark ms-3 w-100">Delete</button>
            </form>
            <% } %>
          </div>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12 col-md-8 offset-md-2">
        <h3>Where you'll be</h3>
        <div id="map" style="width: 100%; max-width: 400px; height: 300px; border: 0.5px solid #000; border-radius: 12px;"></div>
      </div>
    </div>
  </div>

  <% 
    let coordsJS;
    if (listing.geometry && listing.geometry.coordinates && listing.geometry.coordinates.length === 2) {
      coordsJS = JSON.stringify(listing.geometry.coordinates);
    } else {
      coordsJS = 'null';
    }
    let locationJS = '';
    if (listing.location) {
      locationJS = listing.location.replace(/"/g, '\"');
    }
  %>
  <script>
    const coordinates = <%- coordsJS %>;
    const locationString = "<%= locationJS %>";

    if (coordinates !== null) {
      showMap(coordinates);
    } else if (locationString && locationString.trim() !== '') {
      fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(locationString)}`)
        .then(res => res.json())
        .then(data => {
          if (data && data[0]) {
            const coords = [parseFloat(data[0].lon), parseFloat(data[0].lat)];
            showMap(coords);
          } else {
            showMap([75.7876, 21.0418]);
          }
        })
        .catch(() => showMap([75.7876, 21.0418]));
    } else {
      showMap([75.7876, 21.0418]);
    }

    function showMap(coords) {
      const map = new maplibregl.Map({
        style: 'https://tiles.openfreemap.org/styles/liberty',
        center: coords,
        zoom: 9.5,
        container: 'map',
      });
      if (Array.isArray(coords) && coords.length === 2) {
        new maplibregl.Marker().setLngLat(coords).addTo(map);
      }
    }
  </script>
</body>
</body>
