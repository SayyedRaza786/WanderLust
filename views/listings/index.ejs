<% layout("/layouts/boilerplate") %>

<body>
  <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter{
      text-align: center;
      margin-right: 2rem;
      opacity: 0.7;
      cursor: pointer;
    }
    .filter:hover{
      opacity: 1;
    }

    .tax-info{
      display: none;
    }

    .tax-toggle{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.5rem;
      padding: 1rem;
      /* padding-bottom: 2rem; */
      display: flex;
      align-items: center;
      margin-left: 3rem;
      margin-bottom: 1rem;
    }
  </style>
  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </div>

    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castels</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-tent"></i></div>
      <p>Camping</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
</div>
    </div>
  </div>
  <!-- <h3>All Listings</h3> -->
  <br>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings){ %>
      <a href="/listings/<%=listing._id%>" class="listing-link">
      <div class="card listing-card" style="width: 23rem">
          <img src="<%= listing.image.url ? listing.image.url : listing.image %>" class="card-img-top" alt="listing Image" style="height: 15rem" />
          <div class="card-img-overlay"></div>
          <div class="card-body">
           <h5 class="card-title"><%= listing.title %></h5>
           <p class="card-text">
           <i><b>&#8377 <%= listing.price.toLocaleString("en-IN") %> </b></i>/ night
           <i class="tax-info">+18% GST</i>
            <br>
          </p>
          </div>
          </div>
  
  </a>
   <% } %>
  </div>


<script>
  let taxSwitch = document.getElementById("switchCheckDefault")
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info")

    for(info of taxInfo){
      if(info.style.display != "inline"){
        info.style.display = "inline"
      }else{
        info.style.display = "none"
      }
      
    }
  })
</script>
  